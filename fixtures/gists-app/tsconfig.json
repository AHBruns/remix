{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["app/components/*"],
      "#/*": ["app/routes/gists/*", "app/routes/blog/*"],
      "~/*": ["app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
